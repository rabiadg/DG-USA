{% extends '@SonataAdmin/CRUD/base_edit.html.twig' %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            {% if object.postCategories|length>0 %}
            {% for cat in object.postCategories %}
            $("#{{ admin.uniqid }}_postCategories > option").each(function () {
                if (this.value =={{ cat.id }}) {
                    $(this).attr('selected', 'selected');
                    $("#{{ admin.uniqid }}_postCategories").select2({width: '100%'});
                }
            });
            {% endfor %}
            {% endif %}
        });
    </script>
{% endblock %}